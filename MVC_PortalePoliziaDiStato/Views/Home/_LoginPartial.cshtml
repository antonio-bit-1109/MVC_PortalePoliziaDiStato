
@model MVC_PortalePoliziaDiStato.Models.LoginModel



<div class="accordion" id="accordionPanelsStayOpenExample">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                Login Section
            </button>
        </h2>
        <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show">
            <div class="accordion-body">
                <form method="post" action="@Url.Action("CheckLogin", "Home")">
                    <div class="mb-3">
                        <label for="FormName" class="form-label">Nome Agente</label>
                        @Html.EditorFor(model => model.NomeAgente, new { htmlAttributes = new { @class = "form-control", id = "FormName" } })
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Password</label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", id = "exampleInputPassword1" } })
                    </div>
                    <div class="d-flex gap-5">
                        <button type="submit" class="btn btn-primary">Entra Nel Portale</button>
                        <button id="winButton" data-bs-target="#exampleModalToggle" data-bs-toggle="modal" class="btn btn-outline-dark"> Clicca per Vincere </button>
                    </div>
                </form>
            </div>
        </div>

        @* MODAL 1  *@
        <div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalToggleLabel"> Ciao Luca :)</h1>
                        @*<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>*@
                    </div>
                    <div class="modal-body">
                        @* INSERIRE UNA GIF  *@
                        <img  src="~/Content/imgs/gif.gif"/>
                    </div>
                    <div class="modal-footer">
                        <p>chiudi --></p>
                        <button class="btn btn-primary" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal">Chiudi</button>
                    </div>
                </div>
            </div>
        </div>

        @* MODAL 2  *@
        <div class="modal fade" id="exampleModalToggle2" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalToggleLabel2"> Scherzavo :D </h1>
                        @*<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>*@
                    </div>
                    <div class="modal-body">
                        <audio id="my_audio" autoplay>
                            <source src="~/Content/music/rick_roll_music.mp3" type="audio/mp3" />
                        </audio>
                       <img class="w-100" src="~/Content/imgs/rick_roll.gif"/>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" data-bs-target="#exampleModalToggle" data-bs-toggle="modal">Chiudi</button>
                    </div>
                </div>
            </div>
        </div>



    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


}




