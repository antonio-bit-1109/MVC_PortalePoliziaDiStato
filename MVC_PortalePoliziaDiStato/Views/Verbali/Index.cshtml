@{
    ViewBag.Title = "Tipologie di verbali";
}




@if (TempData["Errore"] != null)
{
    <div class="alert alert-danger my-3 d-flex justify-content-center" role="alert">
        @TempData["Errore"]
    </div>
}

@if (TempData["Messaggio"] != null)
{
    <div class="alert alert-success my-3 d-flex justify-content-center" role="alert">
        @TempData["Messaggio"]
    </div>
}


<div class="container">
    <div class="row">
        <div class="col">

            <div class="p-4 d-flex flex-column">

                <h2 class="display-5 mb-5">@(Session["benvenuto"] != null ? Session["benvenuto"] : null) </h2>

                <h3 class="m-auto">@ViewBag.Title</h3>

                <div class="container">
                    <div class="m-4">
                        <div class="row">
                            <div class="col-6">
                                <div class="d-flex justify-content-center">
                                    @Html.ActionLink("Totale verbali raggruppati per trasgressore", "VerbaliRaggruppatiTrasgressore", new { area = "" }, new { @class = "btn btn-primary text-light" })

                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex justify-content-center">
                                    @Html.ActionLink("Totale dei punti decurtati raggruppati per trasgressore ", "TotalePuntiDecurtati_PerTrasgressore", new { area = "" }, new { @class = "btn btn-primary text-light" })

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="m-4">
                        <div class="row">
                            <div class="col-6">
                                <div class="d-flex justify-content-center">
                                    @Html.ActionLink("Violazioni con importo maggiore di 400 euro ", "VerbaliImportoMaggiore400", new { area = "" }, new { @class = "btn btn-primary text-light" })

                                </div>
                            </div>

                            <div class="col-6">
                                <div class="d-flex justify-content-center">
                                    @Html.ActionLink("violazioni decurt. punti > 10  ", "verbaliViolazioni10Pt", new { area = "" }, new { @class = "btn btn-primary text-light" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


<script>
    function hideAlertAfterThreeSeconds() {
        setTimeout(function () {
            $('.alert').fadeOut('slow');
        }, 3000);
    }
    $(document).ready(function () {
        hideAlertAfterThreeSeconds();
    });
</script>

}
